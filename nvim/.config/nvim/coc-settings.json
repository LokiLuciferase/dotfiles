{
    "bashIde.backgroundAnalysisMaxFiles": 10,
    "coc.preferences.enableLinkedEditing": false,
    "semanticTokens.enable": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["-S", "-l 100"],
    "pyright.disableProgressNotifications": false,
    "pyright.inlayHints.variableTypes": false,
    "pyright.inlayHints.functionReturnTypes": true,
    "pyright.testing.provider": "pytest",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportOptionalMemberAccess": "none",
        "reportGeneralTypeIssues":"none",
        "reportPrivateUsage": "warning",
        "reportUnusedImport": "information"
    },
    "diagnostic-languageserver.formatFiletypes": {
      "sh": "shfmt"
    },
    "diagnostic-languageserver.formatters": {
        "shfmt": {
            "args": []
        }
    },
    "clangd.fallbackFlags": [ "-std=c++17" ],
    "rust-analyzer.inlayHints.typeHints.enable": true,
    "rust-analyzer.inlayHints.chainingHints.enable": true,
    "ltex.disabledRules": {
        "en-US": [
            "MORFOLOGIK_RULE_EN_US",
            "UPPERCASE_SENTENCE_START"
        ]
    },
    "markdown-preview-enhanced.previewTheme": "github-dark.css",
    "Lua.diagnostics.globals": [
      "vim"
    ],
    "snippets.ultisnips.pythonPrompt": false
}
