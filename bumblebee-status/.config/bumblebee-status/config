[core]
modules = title,spotify,cpu,memory,disk:root,redshift,brightness_autohide,battery_autohide,pasink,datetime,dunst
autohide = cpu,memory,disk
theme = monsterkai

[module-parameters]
cpu.format = {:2.0f}%
cpu.theme.minwidth = 3
memory.format = {percent:.00f}%
disk.format = {percent:.00f}%
brightness_autohide.format = {:.00f}%
datetime.format = %a %Y-%m-%d %H:%M

brightness_autohide.left-click = brightnessctl set "$(zenity --title 'Set Brightness' --entry --text 'Brightness:')%"
datetime.left-click = evolution -c calendar
cpu.left-click = alacritty -e htop
cpu.right-click = alacritty -e btop
memory.left-click = alacritty -e htop
memory.right-click = alacritty -e btop
spotify.right-click = i3-msg '[class="Spotify"] focus'

cpu.interval = 3s
memory.interval = 20s
disk.interval = 5m
datetime.interval = 10s

title.max = 128

spotify.layout = spotify.song
spotify.concise_controls = True
spotify.scrolling.width = 128
spotify.scrolling.makewide = False
