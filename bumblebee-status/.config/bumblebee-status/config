[core]
modules = title,playerctl2,cpu,memory,disk:root,redshift,brightness_autohide,battery_autohide,pasink,datetime,dunst
autohide = cpu,memory,disk
theme = monsterkai

[module-parameters]
cpu.format = {:2.0f}%
cpu.theme.minwidth = 3
memory.format = {percent:.00f}%
disk.format = {percent:.00f}%
brightness_autohide.format = {:.00f}%
datetime.format = %a %Y-%m-%d %H:%M

brightness_autohide.left-click = brightnessctl set "$(zenity --title 'Set Brightness' --entry --text 'Brightness:')%"
datetime.left-click = evolution -c calendar
cpu.left-click = alacritty -e htop
cpu.right-click = alacritty -e btop
memory.left-click = alacritty -e htop
memory.right-click = alacritty -e btop
playerctl2.left-click = playerctl -p mpv,spotify,Spot play-pause
playerctl2.right-click = i3-msg '[class="Spotify"] focus'
playerctl2.wheel-up = playerctl previous
playerctl2.wheel-down = playerctl next

cpu.interval = 3s
memory.interval = 20s
disk.interval = 5m
datetime.interval = 10s

title.max = 64

playerctl2.format = {{artist}} - {{title}}
playerctl2.layout = playerctl.song
playerctl2.args = -p mpv,spotify,Spot
playerctl2.hide = true
